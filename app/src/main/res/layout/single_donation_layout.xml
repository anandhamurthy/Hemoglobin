<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/single_user_selfie_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_margin="5dp"
                android:id="@+id/valid"
                android:layout_centerVertical="true"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/days"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:fontFamily="@font/nunito_semibold"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="42"
                android:textColor="@color/colorWhite"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:text="Donated To"
                android:layout_margin="2dp"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/valid"
                android:id="@+id/approve_text"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/nunito"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text="Blood Bank Name"
                android:textSize="20dp"
                android:maxLines="1"
                android:layout_toRightOf="@+id/valid"
                android:layout_marginLeft="5dp"
                android:id="@+id/approve_bank_name"
                android:layout_below="@+id/approve_text"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/nunito_semibold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Date"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/valid"
                android:id="@+id/date"
                android:layout_margin="2dp"
                android:layout_below="@+id/approve_bank_name"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/nunito_semibold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Time"
                android:layout_toRightOf="@+id/valid"
                android:textSize="20dp"
                android:id="@+id/time"
                android:layout_margin="2dp"
                android:layout_below="@+id/date"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/nunito_semibold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text="Place"
                android:textSize="20dp"
                android:id="@+id/place"
                android:layout_margin="10dp"
                android:layout_below="@+id/time"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/nunito_semibold"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>