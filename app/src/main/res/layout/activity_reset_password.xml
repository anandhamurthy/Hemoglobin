<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ResetPasswordActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/reset_password_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible" />


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/reset_password_progress_bar"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:id="@+id/reset_password_icon"
            android:src="@drawable/icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reset_password_forgot_password_text"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/reset_password_icon"
            android:text="Forgot Password"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/reset_password_forgot_password_text_2"
            android:layout_below="@+id/reset_password_forgot_password_text"
            android:text="We just need your registered Email Id to sent you password reset instructions."
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/reset_password_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reset_password_forgot_password_text_2"
            android:layout_margin="5dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:ems="10"
            android:fontFamily="@font/nunito"
            android:hint="Email id"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp" />


        <Button
            android:id="@+id/reset_password_reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reset_password_email"
            android:layout_margin="5dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:fontFamily="@font/nunito"
            android:text="Reset Password"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/reset_password_login"
            android:layout_below="@+id/reset_password_reset_password"
            android:text="Password Remembered ! Login.."
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp" />

    </RelativeLayout>

    </ScrollView>

</LinearLayout>
