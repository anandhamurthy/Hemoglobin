<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settings_profile"
                android:layout_width="100dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/settings_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_profile"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/nunito_semibold"
                android:hint="Name"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/settings_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_name"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_semibold"
                android:text="Email Address"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/age_gender"
                android:weightSum="3"
                android:layout_below="@+id/settings_email"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/settings_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semibold"
                    android:hint="Gender"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/settings_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semibold"
                    android:hint="Age"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/settings_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semibold"
                    android:hint="Weight"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/dob"
                android:weightSum="3"
                android:layout_below="@+id/age_gender"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/settings_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semibold"
                    android:hint="Day"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />

                <AutoCompleteTextView
                    android:id="@+id/settings_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:fontFamily="@font/nunito_semibold"
                    android:hint="Month"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/settings_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semibold"
                    android:hint="Year"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />

            </LinearLayout>

            <AutoCompleteTextView
                android:id="@+id/settings_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dob"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_semibold"
                android:hint="State"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

            <AutoCompleteTextView
                android:id="@+id/settings_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_state"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_semibold"
                android:hint="District"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/settings_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_district"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_semibold"
                android:hint="City"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />


        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/settings_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="28dp"
            android:src="@drawable/save"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp" />
    </LinearLayout>

</RelativeLayout>